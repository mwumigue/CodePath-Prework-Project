<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/general"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f1faee"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:text="Hello from Miguel!"
        android:textAlignment="center"
        android:textSize="40sp"
        android:textColor="@color/black"/>

    <TextView
        android:id="@+id/text_color_button"
        android:layout_width="wrap_content"
        android:layout_centerInParent="true"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:text="Tap to change text color"
        android:padding="10dp"
        android:layout_alignParentBottom="true"
        android:textSize="30sp"
        android:textColor="@color/white"
        android:background="#e63946"/>

    <TextView
        android:id="@+id/background_color_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/text_color_button"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp"
        android:layout_marginLeft="30dp"
        android:padding="10dp"
        android:text="Tap to change background color"
        android:textSize="30sp"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:background="#e63946"/>

    <TextView
        android:id="@+id/text_change_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/background_color_button"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp"
        android:layout_marginLeft="30dp"
        android:padding="10dp"
        android:text="Tap to change text"
        android:textSize="30sp"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:background="#e63946"/>

    <TextView
        android:id="@+id/text_upload_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/text_change_button"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp"
        android:layout_marginLeft="30dp"
        android:padding="10dp"
        android:text="Tap to upload your custom text"
        android:textSize="30sp"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:background="#e63946"/>

    <EditText
        android:id="@+id/custom_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/text_upload_button"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp"
        android:layout_marginLeft="30dp"
        android:padding="10dp"
        android:hint="Create your custom text"
        android:textSize="30sp"
        android:textAlignment="center"
        android:textColor="@color/black"/>

</RelativeLayout>